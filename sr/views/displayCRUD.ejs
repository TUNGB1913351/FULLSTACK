<!DOCTYPE html>
<html lang="en">
<head>
  <title>Get CRUD</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<style>
    .btn-edit{
        background-color: burlywood;
        border: none;
        outline: none;
        width: 50px;
        height: 30px;
        cursor: pointer;
        border-radius: 3px;
    }
    .btn-delete{
        background-color: aqua;
        border: none;
        outline: none;
        width: 50px;
        height: 30px;
        cursor: pointer;
        border-radius: 3px;
    }
</style>
<body>

<div class="container">
         
  <table class="table table-hover">
        <tr>
            <th>Email</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Gender</th>
            <th>Action</th>
        </tr> 
    <% for(var i=0; i < dataTable.length; i++) { %>
        <tr>
            <td><%= dataTable[i].email %></td>
            <td><%= dataTable[i].firstName %></td>
            <td><%= dataTable[i].lastName %></td>
            <td><%= dataTable[i].address %></td>
            <td><%= dataTable[i].phonenumber %></td>       
            <td><%= dataTable[i].gender %></td>
            <td>
                <a href="/edit-crud?id=<%=dataTable[i].id %>">
                    <button class="btn-edit" type="button">Edit</button> 
                </a>
                <a href="/deleted-crud?id=<%=dataTable[i].id %>">
                    <button class="btn-delete" type="button">Delete</button>

                </a>

            </td>

        </tr>
     <% } %>
  </table>
</div>

</body>
</html>
